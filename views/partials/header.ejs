	<nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
		<div class="container">

  <a class="navbar-brand" href="/" style="letter-spacing:0.6rem;font-family: 'Acme', sans-serif"><i class="fab fa-algolia"></i>PicIt</a>
