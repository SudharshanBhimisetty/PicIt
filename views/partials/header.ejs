	border-radius:15px;
	color:red;
	padding:10px;
	margin-bottom:10px;
	width:100%;
	font-weight:bold;
}



.success-flash{
	border:1px solid green;
	color:green;
	border-radius:15px;
	padding:10px;
	width:100%;
	margin-bottom:10px;
	font-weight:bold;
}

	
